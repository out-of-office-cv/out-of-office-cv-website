{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"]
  },
  "include": [
    "*.ts",
    ".vitepress/**/*.ts",
    "pollies/**/*.ts",
    "data/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules", ".vitepress/dist", ".vitepress/cache"]
}
